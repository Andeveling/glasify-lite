{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"root": true,
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				// Tailwind CSS v4 custom at-rules (e.g., @theme, @custom-variant)
				// can trigger false positives. Turn this off globally.
				"noUnknownAtRules": "off"
			}
		}
	}
}
