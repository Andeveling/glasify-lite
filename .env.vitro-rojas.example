# Vitro Rojas S.A. - Environment Variables Example
# Copy this file to .env and update with actual values

# ==========================================
# DATABASE
# ==========================================
DATABASE_URL="postgresql://user:password@localhost:5432/glasify_vitro_rojas"

# ==========================================
# NEXTAUTH (Authentication)
# ==========================================
NEXTAUTH_SECRET="your-secret-key-here" # Generate with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional, for social login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ==========================================
# TENANT CONFIGURATION (Vitro Rojas S.A.)
# ==========================================
TENANT_BUSINESS_NAME="Vitro Rojas S.A."
TENANT_CURRENCY="USD"
TENANT_LOCALE="es-PA"
TENANT_TIMEZONE="America/Panama"
TENANT_QUOTE_VALIDITY_DAYS="15"

# Optional tenant fields
TENANT_CONTACT_EMAIL="ventas@vitrorojas.com"
TENANT_CONTACT_PHONE="+507-123-4567"
TENANT_BUSINESS_ADDRESS="Ciudad de Panamá, Panamá"

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================
NEXT_PUBLIC_ENABLE_CART="false"
NEXT_PUBLIC_ENABLE_CHECKOUT="false"

# ==========================================
# LOGGING (Optional)
# ==========================================
LOG_LEVEL="info" # debug, info, warn, error
LOG_FILE_PATH="./logs/glasify.log"

# ==========================================
# NOTES
# ==========================================
# - Currency: USD is the official currency of Panama (no local currency)
# - Locale: es-PA for Spanish (Panama) formatting
# - Timezone: America/Panama is equivalent to EST (UTC-5, no DST)
# - ITBMS (Panama VAT): 7% - not included in base configuration
