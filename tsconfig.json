{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@server/*": ["./src/server/*"],
      "@styles/*": ["./src/styles/*"],
      "@trpc/*": ["./src/trpc/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@views/auth/*": ["./src/app/(auth)/*"],
      "@views/catalog/*": ["./src/app/(public)/catalog/*"],
      "@views/components/*": ["./src/app/_components/*"],
      "@views/dashboard/*": ["./src/app/(dashboard)/*"],
      "@views/quote/*": ["./src/app/(public)/quote/*"],
      "@domain/pricing/*": ["./src/domain/pricing/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/app/(public)/catalog/[modelId]/page.tsx.bak",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "e2e/**/*", "prisma/**/*"]
}
